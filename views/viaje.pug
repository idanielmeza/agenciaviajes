extends ./layout/index

block contenido
    main.container.mt-5
        .row
             .col-md-5 
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="imagen viaje", class='img-fluid')
             .col-md-7
                h2= viaje.titulo
                p 
                    svg.icon.icon-tabler.icon-tabler-calendar-event(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#C8297D' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        rect(x='4' y='5' width='16' height='16' rx='2')
                        line(x1='16' y1='3' x2='16' y2='7')
                        line(x1='8' y1='3' x2='8' y2='7')
                        line(x1='4' y1='11' x2='20' y2='11')
                        rect(x='8' y='15' width='2' height='2')
                    | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}

                p 
                    svg.icon.icon-tabler.icon-tabler-users(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#C8297D' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        circle(cx='9' cy='7' r='4')
                        path(d='M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')
                        path(d='M16 3.13a4 4 0 0 1 0 7.75')
                        path(d='M21 21v-2a4 4 0 0 0 -3 -3.85')

                    | #{viaje.disponibles} Disponibles
                
                p
                    svg.icon.icon-tabler.icon-tabler-credit-card(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#C8297D' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        rect(x='3' y='5' width='18' height='14' rx='3')
                        line(x1='3' y1='10' x2='21' y2='10')
                        line(x1='7' y1='15' x2='7.01' y2='15')
                        line(x1='11' y1='15' x2='13' y2='15')
                    
                    | $ #{viaje.precio}

                p   
                    svg.icon.icon-tabler.icon-tabler-info-square(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#C8297D' fill='none' stroke-linecap='round' stroke-linejoin='round')
                        path(stroke='none' d='M0 0h24v24H0z' fill='none')
                        line(x1='12' y1='8' x2='12.01' y2='8')
                        rect(x='4' y='4' width='16' height='16' rx='2')
                        polyline(points='11 12 12 12 12 16 13 16')
                    | #{viaje.descripcion}

                    
    
    